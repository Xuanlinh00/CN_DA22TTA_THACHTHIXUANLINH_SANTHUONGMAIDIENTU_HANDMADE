PORT=8000
NODE_ENV=development
MONGO_URI=mongodb://127.0.0.1:27017/handmade_market

--- BẢO MẬT (JWT) ---
JWT_SECRET=xuanlinh
JWT_EXPIRE=30d

--- CẤU HÌNH ADMIN ---
ADMIN_EMAIL=admin@example.com

--- FRONTEND CLIENT (Để redirect sau khi thanh toán) ---
